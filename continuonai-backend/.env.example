# ContinuonAI Backend Environment Variables
# Copy this file to .env and fill in your values

# Application settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-project-id

# Firebase credentials (for local development)
# In production, use default credentials from Cloud Run
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# GCS bucket names
GCS_BUCKET_NAME=continuonai-models
GCS_EPISODES_BUCKET=continuonai-episodes

# Vertex AI settings
VERTEX_AI_LOCATION=us-central1
TRAINING_MACHINE_TYPE=n1-standard-4
TRAINING_ACCELERATOR_TYPE=NVIDIA_TESLA_T4
TRAINING_ACCELERATOR_COUNT=1

# CORS settings (comma-separated origins)
CORS_ORIGINS=["https://continuonai.com","http://localhost:3000"]

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
