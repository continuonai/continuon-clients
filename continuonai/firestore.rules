rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Helper Functions ---

    // Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user is the specific hardcoded creator (Bootstrap/Dev)
    // TODO: Remove hardcoded email once role management is fully mature
    function isCraig() {
      return isSignedIn() && request.auth.token.email == "craigm26@gmail.com";
    }

    // Check if user has a specific role claiming to be in their user profile
    // Note: This relies on the client-side 'role' field or a custom claim.
    // For robust security, roles should be Custom Claims in the Auth Token.
    // Here we check the Firestore document itself as a fallback/current implementation.
    function hasRole(role) {
      return isSignedIn() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role);
    }

    function isCreator() {
      return isCraig() || hasRole('creator');
    }

    // Check if the user is the owner of the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // Users Collection
    // Users can read/write their own profile.
    // Admins/Creators can read everything (for debugging/dashboard).
    match /users/{userId} {
      allow read: if isOwner(userId) || isCreator();
      allow write: if isOwner(userId) || isCraig(); // Only Craig or the user themselves can edit profile
      
      // Robots under users (if using subcollections)
      match /robots/{robotId} {
        allow read, write: if isOwner(userId) || isCreator();
      }
    }

    // Robots Collection (Root Level)
    // If robots are stored at the root /robots/{robotId}
    match /robots/{robotId} {
      // Creators can create new robots
      allow create: if isCreator();
      
      // Owners can update/delete
      // Note: resource.data.ownerId must match request.auth.uid for update protections
      allow update, delete: if isCreator() && (resource.data.ownerId == request.auth.uid || isCraig());
      
      // Read: Public if 'isPublic' is true, or if owner/creator
      allow read: if isCreator() || resource.data.isPublic == true || resource.data.ownerId == request.auth.uid;
    }

    // Public Data / Discovery
    match /discovery/{docId} {
      allow read: if isSignedIn();
      allow write: if isCreator();
    }
    
    // Default: Deny all others
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
