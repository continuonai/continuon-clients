#!/usr/bin/env bash
#
# Dev convenience: source this to get a consistent environment for
# - ContinuonBrain python tooling (via a local .venv if present)
# - Continuon AI app pointing at the local robot runtime
#
# Usage:
#   source ./continuonai.env
#
set -euo pipefail

REPO_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Activate repo-local virtualenv if it exists (not committed).
if [[ -f "${REPO_ROOT}/.venv/bin/activate" ]]; then
  # shellcheck disable=SC1091
  source "${REPO_ROOT}/.venv/bin/activate"
elif [[ -f "${REPO_ROOT}/continuonbrain/.venv/bin/activate" ]]; then
  # shellcheck disable=SC1091
  source "${REPO_ROOT}/continuonbrain/.venv/bin/activate"
fi

# Point the Continuon AI app (and any scripts) at the local runtime by default.
export CONTINUONAI_BRAIN_BASE_URL="${CONTINUONAI_BRAIN_BASE_URL:-http://localhost:8080}"

